<example>
<p>
  Work out the circumference: diameter = 14 cm.
</p>

<image>
    <shortdescription>Number lines</shortdescription>
    <latex-image>
      \begin{tikzpicture}
        \draw(0,0)--(.5,0);
         \draw[thick](.25,0)circle(7pt);
      \end{tikzpicture}
    </latex-image>
  </image>

  <solution>

      <table>
        <title></title>
        <tabular>
          <row>
            <cell>Circumference</cell>
            <cell><m>= \pi d</m></cell>
          </row>
          <row>
            <cell></cell>
            <cell><m>= \frac{22}{7} \times 14 \text{ cm}</m></cell>
          </row>
          <row>
            <cell></cell>
            <cell><m>= \frac{308}{7}</m> cm</cell>
          </row>
          <row>
            <cell></cell>
            <cell><m>= 44 \text{ cm }</m></cell>
          </row>
        </tabular>
      </table>
  
  </solution>
  
  
</example>


  
  
