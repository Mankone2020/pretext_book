        <subsection xml:id="subsec-Angles-in-a-straightline">
            <title>Angles in a straight line</title>
                <activity>
                    <statement>
                        <p>
                        Calculate the size of the angle labeled <m>k</m> in the figure below.
                        </p> 
                            <image width="50%">
                                <shortdescription> Angles on a straight line.</shortdescription>
                                    <latex-image>
                                        \begin{tikzpicture}
                                                \usetikzlibrary{quotes,angles}
                                                \draw(-4,0) --(4,0);
                                                \draw (-4,0) coordinate (A)-- (4,0) coordinate (C);
                                                \draw(-3,5) coordinate (E)-- (0,0) coordinate (B)-- (3,4) coordinate (D);
                                                <!-- \node at(-4.2,0){A};
                                                \node at (0,-0.2){B};
                                                \node at (4.2,0){C};
                                                \node at(3.2,4.2){D};
                                                \node at (-3.2,5.1){E}; -->
                                                \pic["$50$", draw,-&gt;,black, angle radius=1cm] {angle=C--B--D};
                                                \pic["$k$", draw,-&gt;,black, angle radius=0.8cm] {angle=D--B--E};
                                                \pic["$55$", draw,-&gt;,black, angle radius=1cm] {angle=E--B--A};
                                        \end{tikzpicture}
                                    </latex-image>
                            </image>
                    </statement>
                    
                        <solution>
                                        <p>
                                            Angles on a straight line add upto <m>180</m>
                                        </p>
                                        <p>
                                            The angle <m>k</m> can be solved by adding <m>55+k+50</m>;
                                        </p>
                                        <p>
                                            Equating <me>55+k+50=180</me>,we get;
                                        </p>
                                        <p><me>
                                            k=180-105
                                            </me> 
                                        </p>
                                        <p><me>
                                            \text{Therefore}, k=75
                                            </me>
                                        </p>
                        </solution>
                </activity>
        </subsection>

        <subsection xml:id="subsec-Angles-at-a-point">
            <title>Angles at a point.</title>
                    <activity>
                            <statement>
                                <p>
                                    Angles at a point.
                                </p>
                            
                                            <image width="50%">
                                            <shortdescription>Angles at a point</shortdescription>
                                                <latex-image>
                                                    \begin{tikzpicture}
                                                    \draw(-3,-2) coordinate (a)--(3,2)coordinate(b);
